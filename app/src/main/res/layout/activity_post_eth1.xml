<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".post.PostActivity_ETH_1">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tool_bar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back_500"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go back"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"/>

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What do you want to express?"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="22dp"
        android:textColor="@color/blue"
        android:textStyle="bold"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnInnovative"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/location_24"
        android:text="Innovative Idea"
        app:cornerRadius="50dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLife"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Life Advice"
        android:drawableLeft="@drawable/location_24"
        android:layout_marginTop="40dp"
        app:cornerRadius="50dp"
        android:layout_marginHorizontal="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnThesis"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Thesis Ideas"
        android:drawableLeft="@drawable/location_24"
        android:layout_marginTop="40dp"
        app:cornerRadius="50dp"
        android:layout_marginHorizontal="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOthers"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Others"
        android:drawableLeft="@drawable/location_24"
        android:layout_marginTop="40dp"
        app:cornerRadius="50dp"
        android:layout_marginHorizontal="20dp"/>


</LinearLayout>